<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="30dip"
		android:layout_marginBottom="30dip" android:id="@+id/edittext"
		android:hint="@string/edit_text_hint" android:imeOptions="actionDone" />
	<Button android:layout_width="wrap_content" android:text="@string/speak_button_label"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/speak_button" />
	<Button android:layout_width="wrap_content" android:text="@string/listen_button_label"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/listen_button" android:layout_marginTop="30dip"/>
</LinearLayout>
